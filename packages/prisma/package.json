{
  "name": "@repo/prisma",
  "version": "0.0.0",
  "scripts": {
    "build": "tsup ./index.ts",
    "dev": "tsup ./index.ts --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --skip-generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:dev": "dotenvx run --env-file=.env.development -- prisma migrate dev deploy generate",
    "prisma:prod": "dotenvx run --env-file=.env.production -- prisma migrate deploy"
  },
  "devDependencies": {
    "prisma": "^6.11.1",
    "tsup": "^8.5.0"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}