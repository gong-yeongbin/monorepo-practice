generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  user_id  String @unique
  password String @db.VarChar(20)
  salt     String @db.VarChar(50)
  role     Role   @default(ADMIN)
}

model advertiser {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(30)

  advertising advertising[]
}

model tracker {
  id                   Int    @id @default(autoincrement())
  name                 String @unique @db.VarChar(30)
  tracking_url         String @db.Text
  install_postback_url String @db.Text
  event_postback_url   String @db.Text

  campaign campaign[]
}

model advertising {
  id    Int     @id @default(autoincrement())
  name  String  @unique @db.VarChar(30)
  image String? @db.Text

  advertiser      advertiser @relation(fields: [advertiser_name], references: [name])
  advertiser_name String     @db.VarChar(30)

  campaign campaign[]
}

model campaign {
  id            Int     @id @default(autoincrement())
  token         String  @unique @db.VarChar(50)
  name          String  @db.VarChar(30)
  type          Type
  is_block      Boolean @default(false)
  is_media_sent Boolean @default(false)

  tracker          tracker     @relation(fields: [tracker_name], references: [name])
  tracker_name     String      @db.VarChar(30)
  advertising      advertising @relation(fields: [advertising_name], references: [name])
  advertising_name String      @db.VarChar(30)
  media            media       @relation(fields: [media_name], references: [name])
  media_name       String      @db.VarChar(30)

  campaign_info campaign_info[]
}

model campaign_info {
  id          Int      @id @default(autoincrement())
  campaign    campaign @relation(fields: [campaign_id], references: [id])
  campaign_id Int      @db.Int

  tracker_event_name String @default("install") @db.VarChar(30)
  admin_event_name   String @default("install") @db.VarChar(30)
  media_event_name   String @default("install") @db.VarChar(30)
}

model media {
  id                   Int    @id @default(autoincrement())
  name                 String @unique @db.VarChar(30)
  install_postback_url String @db.Text
  event_postback_url   String @db.Text

  campaign campaign[]
}

enum Role {
  ADMIN
  ADVERTISER
  MEDIA
}

enum Type {
  CPI
  CPA
}
