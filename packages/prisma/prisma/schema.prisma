generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  user_id  String @unique
  password String @db.VarChar(20)
  salt     String @db.VarChar(50)
  role     Role   @default(ADMIN)
}

model advertiser {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(30)

  advertising advertising[]
}

model tracker {
  id                   Int    @id @default(autoincrement())
  name                 String @unique @db.VarChar(30)
  tracking_url         String @db.Text
  install_postback_url String @db.Text
  event_postback_url   String @db.Text

  advertising advertising[]
}

model advertising {
  id    Int     @id @default(autoincrement())
  name  String  @unique @db.VarChar(30)
  image String? @db.Text

  advertiser    advertiser @relation(fields: [advertiser_id], references: [id], onUpdate: Cascade)
  advertiser_id Int        @db.Int
  tracker       tracker    @relation(fields: [tracker_id], references: [id], onUpdate: Cascade)
  tracker_id    Int        @db.Int

  campaign campaign[]
}

model campaign {
  id                   Int     @id @default(autoincrement())
  token                String  @unique @default(uuid()) @db.VarChar(36)
  name                 String  @db.VarChar(30)
  type                 Type
  is_active            Boolean @default(true)
  tracker_tracking_url String  @db.Text

  advertising    advertising @relation(fields: [advertising_id], references: [id], onUpdate: Cascade)
  advertising_id Int         @db.Int
  media          media       @relation(fields: [media_id], references: [id], onUpdate: Cascade)
  media_id       Int         @db.Int

  campaign_config campaign_config[]
  daily_statistic daily_statistic[]
}

model media {
  id                   Int    @id @default(autoincrement())
  name                 String @unique @db.VarChar(30)
  install_postback_url String @db.Text
  event_postback_url   String @db.Text

  campaign campaign[]
}

model campaign_config {
  id                 Int      @id @default(autoincrement())
  campaign           campaign @relation(fields: [campaign_id], references: [id], onDelete: Cascade)
  campaign_id        Int      @db.Int
  send_media         Boolean  @default(true)
  tracker_event_name String   @default("install") @db.VarChar(30)
  admin_event_name   String   @default("install") @db.VarChar(30)
  media_event_name   String   @default("install") @db.VarChar(30)

  @@unique([campaign_id, admin_event_name])
}

model postback {
  id               Int       @id @default(autoincrement())
  tracker_name     String    @db.VarChar(30)
  event_name       String    @db.VarChar(100)
  click_id         String    @db.VarChar(100)
  pub_id           String?   @db.VarChar(50)
  sub_id           String?   @db.VarChar(50)
  view_code        String    @db.VarChar(100)
  token            String    @db.VarChar(100)
  adid             String?   @db.VarChar(50)
  idfa             String?   @db.VarChar(50)
  ip               String    @db.VarChar(30)
  country_code     String?   @db.VarChar(10)
  clicked_at       DateTime? @db.DateTime()
  installed_at     DateTime? @db.DateTime()
  evented_at       DateTime? @db.DateTime()
  media_sent_at    DateTime? @db.DateTime()
  revenue_currency String?   @db.VarChar(10)
  revenue          String?   @db.VarChar(50)
  raw_query_params String    @db.Text

  @@index([token])
}

model daily_statistic {
  id           Int      @id @default(autoincrement())
  view_code    String   @db.VarChar(100)
  campaign     campaign @relation(fields: [token], references: [token])
  token        String   @db.VarChar(100)
  pub_id       String?  @db.VarChar(50)
  sub_id       String?  @db.VarChar(50)
  click        Int      @default(0)
  install      Int      @default(0)
  registration Int      @default(0)
  retention    Int      @default(0)
  purchase     Int      @default(0)
  revenue      Int      @default(0)
  etc1         Int      @default(0)
  etc2         Int      @default(0)
  etc3         Int      @default(0)
  etc4         Int      @default(0)
  etc5         Int      @default(0)
  unregistered Int      @default(0)
  created_date DateTime @db.Date()

  @@unique([view_code, created_date])
}

enum Role {
  ADMIN
  ADVERTISER
  MEDIA
}

enum Type {
  CPI
  CPA
}
